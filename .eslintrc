{
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "allowImportExportEverywhere": true,
      "sourceType": "module"
    },
    plugins: ['import'],
    "rules": {
      "generator-star-spacing": 0,
      "camelcase": 0,
      "react/prefer-stateless-function": 0,
      "import/no-unresolved": 2,
      "import/prefer-default-export": 0,
      "no-else-return": 0,
      "comma-dangle": [
        2,
        "only-multiline"
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": 0,
      "no-underscore-dangle": 0,
      "object-shorthand": 0,
      "object-curly-spacing": 0,
      "max-len": 0,
      "prefer-template": 2,
      "no-use-before-define": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "new-cap": 0,
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "quote-props": [
        2,
        "consistent-as-needed"
      ],
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "_unused"
        }
      ],
      "no-nested-ternary": 0
    }
}
